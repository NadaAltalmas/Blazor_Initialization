@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
<p>Welcome to your new app.</p>

<button class="btn btn-primary" @onclick="LoadHybridComponent">
Load Hybrid Component</button>

@if (showHybrid)
{
  <p>Hybrid Component is now Loaded!</p>
    <HybridComponent />
}
else{
  <p> Click the button to load the Hybrid Component</p>
}

@code {
    private bool showHybrid = false;

    public void LoadHybridComponent()
    {
      showHybrid = true;
    }
}